<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans.xsd
                            http://www.springframework.org/schema/context
                            http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>





        <bean id="rockMusic" class="org.modeus.springcourse.RockMusic" />
        <bean id="jazzMusic" class="org.modeus.springcourse.JazzMusic" />
        <bean id="classicalMusic" class="org.modeus.springcourse.ClassicalMusic" />

        <bean id="musicPlayer" class="org.modeus.springcourse.MusicPlayer">

        <!-- Інжекція масиву musicList -->
        <property name="musicList">
            <list>
                <ref bean="rockMusic" />
                <ref bean="jazzMusic" />
                <ref bean="classicalMusic" />
            </list>
        </property>



    </bean>
</beans>